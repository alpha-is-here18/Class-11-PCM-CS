    }

    .button-container a:hover, ul li a:hover {
      background: #388e3c;
    }

    ul {
      list-style: none;
      padding: 0;
    }

    .hidden {
      display: none;
    }

    #contentPanel {
      width: 100vw;
      transform: translateX(100%);
      transition: transform 0.5s ease-in-out;
      position: absolute;
      top: 0;
      left: 0;
      background: #ffffff;
      height: 100vh;
      z-index: 10;
      padding-top: 100px;
    }

    #contentPanel.active {
      transform: translateX(0);
    }

    #closeContent {
      position: absolute;
      top: 20px;
      right: 30px;
      font-size: 1.5em;
