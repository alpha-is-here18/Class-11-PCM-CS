<body>
  <h1>Choose a Subject</h1>
  <div class="button-container" id="subjectButtons">
    <a href="#" onclick="showChapters('Maths')">üìò Maths</a>
    <a href="#" onclick="showChapters('English')">üìó English</a>
    <a href="#" onclick="showChapters('CS')">üíª Computer Science</a>
    <a href="#" onclick="showChapters('Chemistry')">‚öóÔ∏è Chemistry</a>
    <a href="#" onclick="showChapters('Physics')">üî¨ Physics</a>
  </div>

  <div id="chapters" class="hidden">
    <h2 id="subjectTitle"></h2>
    <div class="button-container" id="chapterList"></div>
    <a href="#" onclick="goHome()">‚Üê Back to Subjects</a>
  </div>

  <div id="chapterOptions" class="hidden">
    <h2 id="chapterTitle"></h2>
    <div class="button-container">
      <a href="#" onclick="showContent('notes')">üìì Notes</a>
      <a href="#" onclick="showContent('exercise')">üß† Exercise</a>
      <a href="#" onclick="showContent('summary')">üìù Summary</a>
    </div>
    <a href="#" onclick="goBackToChapters()">‚Üê Back to Chapters</a>
  </div>

  <div id="contentPanel">
    <button id="closeContent" onclick="hideContent()">‚úñ</button>
    <div id="contentDisplay"></div>
  </div>

  <script>
    const data = {
      Maths: ["üìò Algebra", "üìê Geometry", "üìä Trigonometry"],
      English: ["üìñ Grammar", "üì∞ Comprehension", "üìö Literature"],
      CS: ["üí° Programming Basics", "üåê Web Development", "üì¶ Data Structures"],
      Chemistry: ["‚öõÔ∏è Atoms", "üî¨ Molecules", "üß™ Reactions"],
      Physics: ["üèÉ Motion", "üß≤ Forces", "‚ö° Electricity"]
    };

    let currentSubject = '';
    let currentChapter = '';

    function showChapters(subject) {
      currentSubject = subject;
      document.getElementById("subjectButtons").classList.add("hidden");
      document.getElementById("chapters").classList.remove("hidden");
      document.getElementById("subjectTitle").innerText = subject + " - Chapters";
      const chapterList = document.getElementById("chapterList");
      chapterList.innerHTML = "";
      data[subject].forEach(chapter => {
        const a = document.createElement("a");
        a.href = "#";
        a.innerText = chapter;
        a.onclick = () => showChapterOptions(subject, chapter);
        chapterList.appendChild(a);
      });
    }

    function showChapterOptions(subject, chapter) {
      currentChapter = chapter;
      document.getElementById("chapters").classList.add("hidden");
      document.getElementById("chapterOptions").classList.remove("hidden");
      document.getElementById("chapterTitle").innerText = subject + " - " + chapter;
    }

    function showContent(type) {
      const contentMap = {
        notes: `<h2>Notes for ${currentChapter}</h2>
                <p>Upload your notes or insert PDF/text content here.</p>`,
        exercise: `<h2>Exercise for ${currentChapter}</h2>
                   <p>Upload questions or practice problems here.</p>`,
        summary: `<h2>Summary of ${currentChapter}</h2>
                  <p>Upload key points and highlights here.</p>`
      };
      document.getElementById("contentDisplay").innerHTML = contentMap[type];
      document.getElementById("contentPanel").classList.add("active");
    }

    function hideContent() {
      document.getElementById("contentPanel").classList.remove("active");
    }

    function goHome() {
      document.getElementById("chapters").classList.add("hidden");
      document.getElementById("subjectButtons").classList.remove("hidden");
    }

    function goBackToChapters() {
      document.getElementById("chapterOptions").classList.add("hidden");
      showChapters(currentSubject);
    }
  </script>
</body>
</html>
